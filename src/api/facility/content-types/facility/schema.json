{
  "kind": "collectionType",
  "collectionName": "facilities",
  "info": {
    "singularName": "facility",
    "pluralName": "facilities",
    "displayName": "Facility"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "bookable_status": {
      "type": "boolean",
      "required": false,
      "default": false
    },
    "show_on_menu_panel": {
      "type": "boolean",
      "default": false
    },
    "category_functionality": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "building_parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::building.building",
      "inversedBy": "facilities_childs"
    },
    "background_360_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "first_camera_pov": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 1
    },
    "thumbnail_name": {
      "type": "string",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "show_on_menu_panel"
            },
            false
          ]
        }
      }
    },
    "thumbnail_image": {
      "type": "media",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "show_on_menu_panel"
            },
            false
          ]
        }
      },
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "facility_detail_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description_text": {
      "type": "text",
      "required": true
    },
    "gallery": {
      "type": "component",
      "component": "asset.content-photo",
      "repeatable": true,
      "required": false
    },
    "navigations": {
      "type": "component",
      "component": "asset.navigation",
      "repeatable": true
    }
  }
}
