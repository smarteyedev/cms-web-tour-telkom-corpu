{
  "kind": "collectionType",
  "collectionName": "facilities",
  "info": {
    "singularName": "facility",
    "pluralName": "facilities",
    "displayName": "Facility"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "bookable_status": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "category_functionality": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "building_parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::building.building",
      "inversedBy": "facilities_childs"
    },
    "background_360_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "first_camera_rotation_value": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 360
    },
    "facility_detail": {
      "type": "component",
      "component": "asset.facility-detail",
      "repeatable": true,
      "max": 15
    },
    "content_photos": {
      "type": "component",
      "component": "asset.content-photo",
      "repeatable": true,
      "required": false
    },
    "navigations": {
      "type": "component",
      "component": "asset.navigation",
      "repeatable": true
    }
  }
}
